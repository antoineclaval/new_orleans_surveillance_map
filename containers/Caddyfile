# Caddyfile for NOLA Camera Mapping
# Site address comes from DOMAIN (set in .env). Caddy auto-provisions TLS for domains.

{$DOMAIN:localhost} {
    # Enable compression
    encode gzip

    # Handle static files
    handle /static/* {
        root * /srv
        file_server
    }

    # Handle media files (uploaded images)
    handle /media/* {
        root * /srv
        file_server
    }

    # Proxy everything else to Django
    handle {
        reverse_proxy web:8000 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Real-IP {remote_host}
        }
    }

    # Logging
    log {
        output stdout
        format console
    }
}
